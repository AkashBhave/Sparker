<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.akashbhave.sparker.LoginActivity">
    <TextView
        android:text="Log in to your Sparker account."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp"
        android:id="@+id/textView"
        android:textSize="25sp"
        android:textColor="@android:color/black" />

    <TextView
        android:text="Username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_marginTop="42dp"
        android:id="@+id/usernameTV" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/usernameTV"
        android:layout_alignLeft="@+id/usernameTV"
        android:layout_alignStart="@+id/usernameTV"
        android:layout_marginTop="10dp"
        android:id="@+id/usernameET" />

    <TextView
        android:text="Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/usernameET"
        android:layout_alignRight="@+id/usernameTV"
        android:layout_alignEnd="@+id/usernameTV"
        android:layout_marginTop="54dp"
        android:id="@+id/passwordTV" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_marginTop="11dp"
        android:id="@+id/passwordET"
        android:layout_below="@+id/passwordTV"
        android:layout_alignLeft="@+id/usernameET"
        android:layout_alignStart="@+id/usernameET" />

    <Button
        android:text="Log In"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:id="@+id/loginBT"
        android:layout_below="@+id/passwordET"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:minWidth="130dp" />

    <TextView
        android:text="Don't have an account yet?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:id="@+id/signupActivityInfoTV"
        android:layout_below="@+id/loginBT"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="CLICK HERE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/signupActivityTV"
        android:textColor="#212121"
        android:textStyle="normal|bold"
        android:onClick="sendToSignupActivity"
        android:layout_below="@+id/signupActivityInfoTV"
        android:layout_alignLeft="@+id/signupActivityInfoTV"
        android:layout_alignStart="@+id/signupActivityInfoTV" />

</RelativeLayout>
